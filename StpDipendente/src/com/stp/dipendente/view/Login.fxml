   <top>
      <AnchorPane maxHeight="160.0" maxWidth="800.0" minHeight="160.0" minWidth="800.0" prefHeight="160.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="200.0" fitWidth="420.0" layoutX="190.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/img/logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane fx:id="parentStackPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <JFXTextField fx:id="username" layoutX="273.0" layoutY="133.0" maxWidth="292.0" minWidth="209.0" prefHeight="39.0" prefWidth="292.0" promptText="Username">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="password" layoutX="273.0" layoutY="201.0" maxWidth="292.0" minWidth="209.0" prefHeight="39.0" prefWidth="292.0" promptText="Password">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXPasswordField>
            <ImageView fx:id="userIcon" fitHeight="38.0" fitWidth="42.0" layoutX="232.0" layoutY="134.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/img/account.png" />
               </image>
            </ImageView>
            <ImageView fx:id="passIcon" fitHeight="38.0" fitWidth="42.0" layoutX="232.0" layoutY="202.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/img/lock.png" />
               </image>
            </ImageView>
            <JFXButton fx:id="loginButton" buttonType="RAISED" layoutX="360.0" layoutY="280.0" onAction="#loginButtonClick" style="-fx-background-color: #f0f0f0;" text="Login">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
         </children>
      </AnchorPane>
   </center>
